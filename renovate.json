{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": [
        "*"
      ],
      "enabled": false,
      "description": "Disable automatic PRs - only create PRs for explicitly enabled packages"
    },
    {
      "matchPackageNames": [
        "go.uber.org/zap"
      ],
      "enabled": true,
      "labels": [
        "security",
        "devrev:ISS-6"
      ],
      "prTitle": "{{{depName}}} security update to {{{newVersion}}} [DevRev: ISS-6]",
      "prBodyNotes": [
        "DevRev Ticket: ISS-6",
        "Security vulnerability fix"
      ],
      "commitMessageSuffix": "[DevRev: ISS-6]"
    },
    {
      "matchPackageNames": [
        "golang.org/x/sync"
      ],
      "enabled": true,
      "labels": [
        "security",
        "devrev:ISS-7"
      ],
      "commitMessageTopic": "{{{depName}}} security update",
      "commitMessageSuffix": "[DevRev: ISS-7]",
      "prBodyNotes": [
        "DevRev Ticket: ISS-7",
        "Security vulnerability fix"
      ]
    },
    {
      "matchPackageNames": [
        "golang.org/x/crypto"
      ],
      "enabled": true,
      "labels": [
        "security",
        "devrev:ISS-8"
      ],
      "commitMessageTopic": "{{{depName}}} security update",
      "commitMessageSuffix": "[DevRev: ISS-8]",
      "prBodyNotes": [
        "DevRev Ticket: ISS-8",
        "Security vulnerability fix"
      ]
    }
  ]
}